---
export interface Item {
  title: string
  description: string
  time: string
}

export type Items = Item[]

export interface Props {
  items: Items
}

const { items } = Astro.props
---

<ol class="relative border-0 md:border-l md:border-gray-200">
  {
    items.map((item) => (
      <li class="mb-10 ml-0 md:ml-5">
        <div class="hidden absolute md:flex items-center justify-center w-6 h-6 bg-blue-100 rounded-full -left-3 ring-8 ring-white mt-1">
          <svg
            aria-hidden="true"
            class="w-3 h-3 text-blue-800"
            fill="currentColor"
            viewBox="0 0 20 20"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              fill-rule="evenodd"
              d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z"
              clip-rule="evenodd"
            />
          </svg>
        </div>
        <h3 class="flex items-center mb-1 text-lg font-semibold text-blue-400">
          {item.title}
        </h3>
        <time class="block mb-2 text-sm font-normal leading-none text-gray-400">
          {item.time}
        </time>
        <p class="mb-4 text-base font-normal leading-snug">
          {item.description}
        </p>
      </li>
    ))
  }
</ol>
